<MyGameLevel>
<!-- Level 1 scene file -->

<!--  *** be careful!! comma (,) is not a supported syntax!!  -->
<!--  make sure there are no comma in between attributes -->
<!--  e.g., do NOT do:  PosX="20", PosY="30" -->
<!--  notice the "comma" between PosX and PosY: Syntax error! -->
  
    <!-- cameras -->
	<!-- WC for level 1 is:  -->
                <!-- Viewport: x, y, w, h -->
    <Camera CenterX="6" CenterY="12" Width="32" 
          Viewport="0 0 1280 720"   
          BgColor="0 0 1 1.0"
          />    

    <Background PosX="0" PosY="0" Width="10" Height="10" ZPos="-20" ParallaxDepth="100" 
        LightIndices="0"
        ReceiveShadow="false"
		Texture="bg.png" NormalMap="bg_normal.png" />
    
    <Background PosX="0" PosY="0" Width="10" Height="10" ZPos="-1" ParallaxDepth="10" 
        LightIndices="1 2"
        ReceiveShadow="true"
		Texture="bgLayer.png" NormalMap="bgLayer_normal.png" />
              
              
    <!-- Platforms -->
    <Platform PosX="10" PosY="10" Velocity="0 0 0" MovementRange="0" />
    <Platform PosX="10" PosY="5" Velocity="0 0 0" MovementRange="0" />
    <Platform PosX="25" PosY="7.5" Velocity="1 0 0" MovementRange="5" />
    <Platform PosX="25" PosY="12.5" Velocity="-1 1 0" MovementRange="2" />
    
    <!-- Walls -->
    <Wall PosX="15" PosY="2.5" />
    <Wall PosX="15" PosY="7.5" />
    <Wall PosX="15" PosY="12.5" />
    <Wall PosX="15" PosY="17.5" />
    <Wall PosX="15" PosY="22.5" />
       
   <!-- next level -->
   <NextLevel Next="Level2">
        <!-- a fold assets/Level2 must exist
             a file assets/Level2/Level2.xml must exist!
             -> GameLevel.js: initialize() makes these assumptions
        -->
   
   	<!-- Lights -->
    <!-- starts from index = 0 -->
    <!-- light type: 0=>Point, 1->Directional, 2=>Spot -->
	<Light 
        Type="1" 
        Color="0.6 0.1 0.2 1" 
        Pos="0 0 0"
        Dir="0.1 0.1 -1" 
        Near="10"
        Far="20"
        Inner="0"
        Outter="0"
        DropOff="1"
        Intensity="2" 
        CastShadow="false" 
        />
    <Light 
        Type="1" 
        Color="0.2 0.2 0.6 1" 
        Pos="0 0 0"
        Dir="0 0 -1" 
        Near="10"
        Far="20"
        Inner="0"
        Outter="0"
        DropOff="1"
        Intensity="3" 
        CastShadow="false" 
        />
     <!-- index 2 is hero light! -->
    <Light 
        Type="2" 
        Color="0.5 0.5 0.5 1" 
        Pos="20 20 15"
        Dir="0.1 0 -1" 
        Near="40"
        Far="60"
        Inner="1.5"
        Outter="1.8"
        DropOff="1"
        Intensity="2" 
        CastShadow="true" 
        />
</MyGameLevel>